<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nj.opengallerydemo.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_show1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ACTION_PICK"/>

        <Button
            android:id="@+id/btn_show2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ACTION_GET_CONTENT"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_compress1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="压缩1"/>

        <Button
            android:id="@+id/btn_compress2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="压缩2"/>

        <Button
            android:id="@+id/btn_compress3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="压缩3"/>
    </LinearLayout>


    <TextView
        android:id="@+id/tv_path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
